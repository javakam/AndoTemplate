<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diff_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="4dp"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingTop="4dp"
        android:paddingEnd="5dp">

        <Button
            android:id="@+id/item_change_reset"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="重置数据"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/item_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="更新位置0和4"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/notify_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="更新位置0 notifyItemChanged (payload) "
            android:textAllCaps="false"
            android:textColor="@color/color_main_red" />

    </LinearLayout>

</FrameLayout>