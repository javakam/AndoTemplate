<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--=============================== Loader ======================================-->
    <declare-styleable name="Loader">
        <attr name="state">
            <enum name="loading" value="2" />
            <enum name="error" value="3" />
            <enum name="empty" value="4" />
            <enum name="success" value="5" />
        </attr>
    </declare-styleable>

    <!--=============================== RadiusImageView ======================================-->
    <attr name="RadiusImageViewStyle" format="reference" />
    <declare-styleable name="RadiusImageView">
        <!--边框宽度，默认：0-->
        <attr name="riv_border_width" format="dimension" />
        <!--边框的颜色，默认：Color.GRAY-->
        <attr name="riv_border_color" format="color" />
        <!--选中时，覆盖在图片上的图层颜色，默认：Color.TRANSPARENT-->
        <attr name="riv_selected_mask_color" format="color" />
        <!--边框选中时的颜色，默认：Color.GRAY-->
        <attr name="riv_selected_border_color" format="color" />
        <!--边框选中时的宽度，默认：0-->
        <attr name="riv_selected_border_width" format="dimension" />
        <!--圆角的大小，默认0-->
        <attr name="riv_corner_radius" format="dimension" />
        <!--是否是椭圆形，默认：false-->
        <attr name="riv_is_oval" format="boolean" />
        <!--图片是否是圆形的，默认：false-->
        <attr name="riv_is_circle" format="boolean" />
        <!--图片是否可触摸选中，默认：true-->
        <attr name="riv_is_touch_select_mode_enabled" format="boolean" />
    </declare-styleable>

    <!--=============================== SuperButton ======================================-->
    <declare-styleable name="SuperButton">
        <attr name="sGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <attr name="sShapeType" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>

        <attr name="sSolidColor" format="color" />

        <attr name="sSelectorPressedColor" format="color" />
        <attr name="sSelectorDisableColor" format="color" />
        <attr name="sSelectorNormalColor" format="color" />

        <attr name="sCornersRadius" format="dimension" />

        <attr name="sCornersTopLeftRadius" format="dimension" />
        <attr name="sCornersTopRightRadius" format="dimension" />
        <attr name="sCornersBottomLeftRadius" format="dimension" />
        <attr name="sCornersBottomRightRadius" format="dimension" />

        <attr name="sStrokeWidth" format="dimension" />
        <attr name="sStrokeDashWidth" format="dimension" />
        <attr name="sStrokeDashGap" format="dimension" />
        <attr name="sStrokeColor" format="color" />

        <attr name="sSizeWidth" format="dimension" />
        <attr name="sSizeHeight" format="dimension" />

        <attr name="sGradientOrientation" format="enum">
            <enum name="TOP_BOTTOM" value="0" />
            <enum name="TR_BL" value="1" />
            <enum name="RIGHT_LEFT" value="2" />
            <enum name="BR_TL" value="3" />
            <enum name="BOTTOM_TOP" value="4" />
            <enum name="BL_TR" value="5" />
            <enum name="LEFT_RIGHT" value="6" />
            <enum name="TL_BR" value="7" />
        </attr>
        <attr name="sGradientCenterX" format="dimension" />
        <attr name="sGradientCenterY" format="dimension" />
        <attr name="sGradientGradientRadius" format="dimension" />
        <attr name="sGradientStartColor" format="color" />
        <attr name="sGradientCenterColor" format="color" />
        <attr name="sGradientEndColor" format="color" />
        <attr name="sGradientUseLevel" format="boolean" />
        <attr name="sGradientType" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
            <enum name="sweep" value="2" />
        </attr>

        <attr name="sUseSelector" format="boolean" />
    </declare-styleable>

    <!--=============================== RippleView ======================================-->
    <attr name="RippleViewStyle" format="reference" />
    <declare-styleable name="RippleView">
        <!--水波的透明度，默认90-->
        <attr name="rv_alpha" format="integer" />
        <!--水波变化的帧率，默认是10-->
        <attr name="rv_frameRate" format="integer" />
        <!--水波持续的时间，默认是400ms-->
        <attr name="rv_rippleDuration" format="integer" />
        <!--水波的颜色， 默认白色-->
        <attr name="rv_color" format="color" />
        <!--水波是否从控件的中心起，默认是false-->
        <attr name="rv_centered" format="boolean" />
        <!--水波的样式-->
        <attr name="rv_type" format="enum">
            <!--单波纹-->
            <enum name="simpleRipple" value="0" />
            <!--双波纹-->
            <enum name="doubleRipple" value="1" />
            <!--方形-->
            <enum name="rectangle" value="2" />
        </attr>
        <!--水波的padding，默认是0-->
        <attr name="rv_ripplePadding" format="dimension" />
        <!--是否支持缩放动画，默认：false-->
        <attr name="rv_zoom" format="boolean" />
        <!--缩放倍率，默认是1.03F-->
        <attr name="rv_zoomScale" format="float" />
        <!--缩放动画持续的时间，默认是200ms-->
        <attr name="rv_zoomDuration" format="integer" />
    </declare-styleable>

    <!-- 阴影 -->
    <declare-styleable name="ShadowDrawable">
        <!-- 阴影圆角弧度-->
        <attr name="sd_shadowRadius" format="dimension" />
        <!-- 阴影颜色 -->
        <attr name="sd_shadowColor" format="color" />
        <!--形状， 默认rectangle-->
        <attr name="sd_shapeType" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="round" value="1" />
        </attr>
        <!-- 圆角弧度 -->
        <attr name="sd_shapeRadius" format="dimension" />
        <!-- X轴阴影偏移 -->
        <attr name="sd_offsetX" format="dimension" />
        <!-- Y轴阴影偏移 -->
        <attr name="sd_offsetY" format="dimension" />
        <!-- 背景颜色 -->
        <attr name="sd_bgColor" format="color" />
        <!-- 第二背景颜色，渐变色使用 -->
        <attr name="sd_secondBgColor" format="color" />
    </declare-styleable>

</resources>